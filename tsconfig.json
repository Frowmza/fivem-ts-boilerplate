{
  "compilerOptions": {
    "outDir": "./",
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "es6",
    "allowJs": false,
    "lib": ["es2017"],
    "types": ["@citizenfx/client"],
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": ["./src/**/*"],
  "exclude": ["./node_modules/**/*", "./build/**/*"]
}